@model MissionskyOA.Models.LoginUserModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="sign-up section-padding text-center " id="download">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h3><img src="@Url.Content("~/Content/images/logo2.png")" /> <span>智能办公平台</span></h3>
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "signup-form", role = "form" }))
                {
                    <div class="form-input-group">
                        <i class="fa fa-envelope"></i>
                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "邮箱" })<br />
                    </div>
                    <div class="form-input-group">
                        <i class="fa fa-lock"></i>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "密码" })
                    </div>
                    <button type="submit" class="btn-fill sign-up-btn animated infinite pulse">登录</button>
                    @Html.ValidationSummary(true, "", new { @class = "input-validation-error" })
                }
            </div>
        </div>
    </div>
</section>
<script>
    function showMessage() {
        var message = '@(string.IsNullOrEmpty(ViewBag.Message)?"":ViewBag.Message)';
        if (message != "") {
            alert(message);
        }
    }
    showMessage();
</script>

