                    <a href="@Url.Action("Index", CmnConstants.MENU_DASHBOARD)"><i class='glyphicon glyphicon-dashboard'></i> <span>Dashboard</span></a>
                </li>*@
            @if (currentUser != null && currentUser.IsAdminStaff) //是否是行政专员
            {
                <li @Html.Raw(CmnConstants.MENU_USER.Equals(currentMenu) ? "class='active'" : String.Empty)>
                    <a href="@Url.Action("Index", CmnConstants.MENU_USER)"><i class='glyphicon glyphicon-user'></i> <span>用户管理</span></a>
                </li>
                <li @Html.Raw(CmnConstants.MENU_ROLE.Equals(currentMenu) ? "class='active'" : String.Empty)>
