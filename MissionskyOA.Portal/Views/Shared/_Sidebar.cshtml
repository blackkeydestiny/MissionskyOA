                        <li @Html.Raw(CmnConstants.MENU_ASSETINVENTORY.Equals(currentMenu) ? "class='active'" : String.Empty)><a href="@Url.Action("Index", CmnConstants.MENU_ASSETINVENTORY)"><i class="fa fa-circle-o"></i> 资产盘点</a></li>
                    </ul>
