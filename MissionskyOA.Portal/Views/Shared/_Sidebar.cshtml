            {
                <li @Html.Raw(currentMenu != null && currentMenu.StartsWith("Asset") ? "class='treeview active'" : "class='treeview'")>
                    <a href="#">
                        <i class="fa fa-ils"></i> <span>资产管理</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
