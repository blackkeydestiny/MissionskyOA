@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MissionskyOA.Models.AttendanceSummary
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small></small>
    </h1>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"></h3>
            <div class="box-tools pull-right">
            </div>
        </div><!-- /.box-header -->
        @using (Html.BeginForm("EditAttendanceSummary", "User", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Year, "年度", new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-3">
                        @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.Year)
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastValue, "上一年剩余", new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-3">
                        @Html.TextBoxFor(m => m.LastValue, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.LastValue)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BaseValue, "本年度基准", new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-3">
                        @Html.TextBoxFor(m => m.BaseValue, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BaseValue)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RemainValue, "本年度剩余", new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-3">
                        @Html.TextBoxFor(m => m.RemainValue, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RemainValue)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-default" value="cancel" name="Submit">取消</button>
                        <button type="submit" class="btn btn-info" value="save" name="Submit">提交</button>
                    </div>
                </div>
            </div><!-- /.box-body -->
            @Html.HiddenFor(m => m.Id)
        }

    </div><!-- /.box -->
</section>

<div class="modal fade modal-center" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="mySmallModalLabel">Alert</h4>
            </div>
            <div class="modal-body">
                @ViewBag.Message
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

@section pagescript{
    <script>

        function showMessage() {
            var message = '@(string.IsNullOrEmpty(ViewBag.Message)?"":ViewBag.Message)';
            if (message != "") {
                $('#messageModal').modal();
            }
        }
        showMessage();
    </script>
}